{{#each posts as |post| }}
  <a href="#" class="text-decor"><div class="card post-cards" data-id="{{post.id}}">  
    <div class="card-header">
      <span>{{post.title}}</span>
      <span class="right-title">Posted by {{post.user.username}} on {{format_date post.createdAt}}</span>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.contents}}</p>
    </div>
  </div></a>
{{/each}}

