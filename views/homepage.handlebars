{{#each posts as |post| }}
  <div class="card post-cards">  
    <div class="card-header" data-id="{{post.id}}">
      <span>{{post.title}}</span>
      <span class="right-title">Posted by {{post.user.username}} on {{format_date post.createdAt}}</span>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.contents}}</p>
    </div>
  </div>
  <div class="card post-cards comment-box">
    <form class="newcomment">
      <div class="form-group">
          <textarea class="form-control" rows="4" cols="50" id="comment-content" placeholder="Comment goes here..."></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary commentsubmit-btn" type="submit">Submit</button>
      </div>
    </form>
  </div>
{{/each}}

<script src="/js/newcomment.js"></script>